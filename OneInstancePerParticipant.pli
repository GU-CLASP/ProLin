processShort : (a : Type) -> (x : a) ->  (p : Prop) ->
  (qs : List Question) ->
  Pending (ShortAnswer x a) -o QUD (Cons (Q x a p) qs) -o p;

pushQUD :
   (q : Question) -> (qs : List Question) ->
   (x y : DP) -> 
   Pending (Ask q x y) -o QUD qs -o QUD (Cons q qs);

